@model IEnumerable<armadieti2.Models.DipartimentoModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeDipartimento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeDipartimento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdDipartimento">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdDipartimento">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdDipartimento">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
