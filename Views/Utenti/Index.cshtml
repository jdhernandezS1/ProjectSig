@model IEnumerable<armadieti2.Models.UtenteModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cognome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdMonitor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoUtenteModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DipartimentoModel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cognome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdMonitor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoUtenteModel.TipoUtente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DipartimentoModel.NomeDipartimento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdUtente">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdUtente">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdUtente">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
